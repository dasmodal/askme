<% @questions.each do |question| %>
  <div class="container mt-sm">
    <p class="mb text-sm text-grey">
      Вопрос <%= link_to "##{question.id}", question_path(question) %>
      для юзера <%= link_to display_user(question.user), user_path(question.user) %>
    </p>
    <%= render question %>
  </div>
<% end %>
