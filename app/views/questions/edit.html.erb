<div class="container">
  <h2 class="title-lg mb">Перемяукнуть мяу <%= @question.id %></h2>

  <%= form_with model: @question do |form| %>
    <p><%= form.label :body, 'Что мурлыкнуть' %></p>
    <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

    <p class="mt"><%= form.label :user_id, 'Номер котеньки' %></p>
    <p><%= form.text_field :user_id, class: 'form-text-field' %></p>

    <p class="mt">
      <%= form.submit 'Мяукнуть', class: 'button button-main' %>
      или <%= link_to 'улизнуть', :back %>
    </p>
  <% end %>
</div>
