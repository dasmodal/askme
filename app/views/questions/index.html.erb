<div class="container">
  <h2 class="title-lg mb">Все мурлыки</h2>

  <% @questions.each do |question| %>
    <p class="mb-sm">
      <%= link_to "Мяу #{question.id}", question_path(question), class: "#{'hidden-text' if question.hidden?}" %>
    </p>
  <% end %>

  <p class="mt">
    <%= link_to "Мурлыкнуть новый мяу", new_question_path, class: 'button button-main' %>
  </p>
</div>
